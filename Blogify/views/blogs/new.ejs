<%- include('../partials/header.ejs') %>
<link rel='stylesheet' href='/stylesheets/blogs/new.css'>
<%- include('../partials/header-close.ejs') %>

<h1>
	Add A Blog
</h1>
<hr>

<form action="/blogs" method="POST">
	<div class="form-group">
		<label for="title">Title:</label>
		<input type="text" name="title" class="form-control" id="title" placeholder="Title of the Blog">
	</div>

	<div class='form-group'>
		<label for="content">Content:</label>
		<textarea class='form-control' placeholder="Content of the Blog" name='content'></textarea>
	</div>
	<div class="form-group">
		<label for='image'>Image URL:</label>
		<input type="text" name='image' id='image' class='form-control' placeholder="Enter Image URL">
	</div>
	<button class='btn btn-success'>
		Add Post
	</button>
</form>

<%- include('../partials/footer.ejs') %>