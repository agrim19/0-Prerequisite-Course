<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/blogs/show.css" /> <%-
include('../partials/header-close.ejs') %>

<div class="container-fluid">
    <h1>
        <%= blog.title %>
    </h1>
    <hr />
    <div class="row">
        <div class="col-9">
            <p>
                <%= blog.content %>
            </p>
            <% if(blog.comments) {%>
            <hr />
            By <%= blog.author.username%>
            <hr />
            <h3>Comments</h3>
            <hr />
            <% blog.comments.forEach((comment)=>{ %>
            <strong><%=comment.authorName%></strong>
            <p><%=comment.content%></p>
            <% if(currentUser&&currentUser._id.equals(comment.author)) {%>
            <form
                action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=DELETE"
                method="POST"
            >
                <button class="btn btn-danger btn-sm">
                    <svg
                        width="1em"
                        height="1em"
                        viewBox="0 0 16 16"
                        class="bi bi-trash"
                        fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"
                        />
                        <path
                            fill-rule="evenodd"
                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
                        />
                    </svg>
                </button>
            </form>
            <% } %>
            <hr />
            <% }) %> <%}%>
            <a
                class="btn btn-success"
                href="/blogs/<%= blog._id %>/comments/new"
                >Add a comment</a
            >
            <% if(currentUser&&currentUser._id==blog.author.id) {%>
            <a href="/blogs/<%= blog._id %>/edit " class="btn btn-warning"
                >Update Post</a
            >
            <form action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete Post</button>
            </form>
            <% } %>
        </div>
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <img
                    src="https://images.unsplash.com/photo-1474552226712-ac0f0961a954?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60"
                    class="card-img-top"
                    alt="profile picture"
                />
                <div class="card-body">
                    <h5 class="card-title">John Doe</h5>
                    <p class="card-text">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit.
                        Rerum tenetur dolorum rem nobis quibusdam, iusto
                        provident quisquam, amet ipsam corporis nisi mollitia
                        magni
                    </p>
                    <a
                        href="mailto: johndoe@example.com"
                        class="btn btn-primary"
                        >Write to Me</a
                    >
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>
